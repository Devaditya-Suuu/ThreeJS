#include<stdio.h>
#include<stdlib.h>
#include<math.h>

int main(){
    float a,b,c;
    float r1,r2,disc;

    // taking input of the coefficient of the quadratic equation
    printf("enter the coefficient of the quadratic equation a, b, c respectively.\n");
    scanf("%f %f %f", &a, &b, &c);
    if(a==0){
        printf("\n it is not a quadratic equation");
        exit(0);
    }
    disc = (b*b)-(4*a*c);
    if(disc == 0){
        r1=r2= -b/(2*a);
        printf("Roots are equal therefore root1 = root1 = %f", r1);
    }
    else if(disc>0){
        r1 = (-b+sqrt(disc)/(2*a));
        r2 = (-b-sqrt(disc)/(2*a));
        printf("Roots are real and distinct \n root1 = %f \n root2 = %f", r1, r2);
    }
    else{
        printf("root are not real they are imaginary");
    }
    return 0;
}